<% @title = "新規問い合わせ（確認）" %>
<h1><%= @title %></h1>

<div id="login-form">
  <%= form_with model: @message, url: customer_messages_path do |f| %>
    <%= render "confirming_form", f: f %>

    <div class="buttons">
      <%= f.submit "送信" %>
      <%= link_to "訂正", new_customer_message_path %>
      <%= link_to "キャンセル", customer_root_path %>
    </div>
  <% end %>
</div>