<header>
  <%= link_to "BAUKIS2", customer_root_path, class: "logo-mark" %>

  <% if flash.notice %>
    <span class="notice"><%= flash.notice %></span>
  <% end %>

  <% if flash.alert %>
    <span class="alert"><%= flash.alert %></span>
  <% end %>

  <% if current_customer %>
    <%= button_to "ログアウト", customer_logout_path, method: :delete, class: "logout-button" %>
    <%= link_to "アカウント", customer_account_path %>
    <%= link_to "問い合わせ", new_customer_message_path %>
  <% else %>
    <%= button_to "ログイン", customer_login_path, class: "login-btn", form: { class: "auth-form" }  %>
  <% end %>
</header>