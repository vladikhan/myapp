<% @title = "アカウントの更新（確認）" %>
<h1><%= @title %></h1>

<div id="login-form" class='confirming'>
  <%= form_with model: @customer_form, scope: :customer,
      url: confirm_customer_account_path, method: :patch, local: true do |f| %>
  <p>以下の内容でアカウントを更新します。よろしいですか?</p>

  <%= render "confirming_form", f: f %>

  <div class="buttons">
    <%= f.submit "更新" %>
    <%= link_to "訂正", edit_customer_account_path %>
  </div>
<% end %>
</div>