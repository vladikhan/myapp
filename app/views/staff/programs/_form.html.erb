<%= markup do |m| 
	p = ProgramFormPresenter.new(f, self)
	m << p.notes
	m << p.text_field_block(:title, "タイトル", maxlength: 32, required: true)

	p.with_options(required: true) do |q|
		m << q.date_field_block(:application_start, "申し込み開始日時",
			instruction: "現在から１年後まで")
		m << q.date_field_block(:end_date, "終了日時",
			instruction: "開始日時から90日後まで")
	end

	p.with_options(size: 6) do |q|
		m << q.number_field_block(:min_number_of_participants, "最小参加人数",
			max: 1000)
		m << q.number_field_block(:max_number_of_participants, "最大参加人数",
			max: 1000)
	end

	m << p.description
	end %>