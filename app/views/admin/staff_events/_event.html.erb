<tr>
  <% unless @staff_member %>
    <td>
      <%= event.member ? 
          (event.member.family_name.to_s + event.member.given_name.to_s) 
          : "不明な職員" %> <!-- ← добавлена проверка event.member и fallback -->
    </td>
  <% end %>
  <td>
    <%= event.description || "不明な種別" %> <!-- ← добавлен fallback для description -->
  </td>
  <td>
    <%= event.occurred_at ? event.occurred_at.strftime("%Y/%m/%d %H:%M:%S") : "日時不明" %> <!-- ← fallback для occured_at -->
  </td>
</tr>