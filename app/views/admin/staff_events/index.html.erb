<h1>
  <% if @staff_member %>
    <%= "#{@staff_member.family_name.to_s}#{@staff_member.given_name.to_s}さんのログイン・ログアウト記録" %> <!-- ← добавлено to_s -->
  <% else %>
    職員のログイン・ログアウト記録
  <% end %>
</h1>
<div class="table-wrapper">

<div class="links">
  <%= link_to "職員一覧", admin_staff_members_path %>
</div>

<%= paginate @events %>

<table class="listing">
  <tr>
    <% unless @staff_member %>
      <th>氏名</th>
    <% end %>
    <th>種別</th>
    <th>日時</th>
  </tr>

  <%= render partial: "event", collection: @events, as: :event %>

  <% if @events.empty? %>
    <tr>
      <td colspan="<%= @staff_member ? 2 : 3 %>" style="text-align:center;">記録がありません</td>
    </tr>
  <% end %>
</table>

<%= paginate @events %>

<div class="links">
  <%= link_to "職員一覧", admin_staff_members_path %>
</div>
</div>