<%# registration of newcomers Styles %>
<% @title = "新人登録" %>
<h1><%= @title %></h1>

<div id="login-form">
  <% if @staff_member.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@staff_member.errors.count, "エラー") %> が発生しました:</h2>
      <ul>
        <% @staff_member.errors.each do |attribute, message| %>
          <li>
            <%= @staff_member.class.human_attribute_name(attribute) %> <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @staff_member, url: admin_staff_members_path do |f| %>
    
    <fieldset id="staff-fields">
      <legend>基本情報</legend>
      <%= render "form", f: f %>
    <div class="buttons">
      <%= f.submit "更新" %>
      <%= link_to "キャンセル", staff_programs_path %>
    </div>
    </fieldset>

  <% end %>
</div>
