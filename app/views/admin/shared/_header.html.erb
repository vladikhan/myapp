<header>
  <%= link_to "BAUKIS2", admin_root_path, class: "logo-mark" %>

  <% if flash.notice %>
    <span class="notice"><%= flash.notice %></span>
  <% end %>

  <% if flash.alert %>
    <span class="alert"><%= flash.alert %></span>
  <% end %>

  <% if current_admin_member %>
    <%= button_to "ログアウト", admin_logout_path, method: :delete, class: "logout-btn",
    form: { class: "auth-form" } %>

  <% else %>
    <%= button_to "ログイン", admin_login_path, class: "login-btn", form: { class: "auth-form" }  %>
  <% end %>
</header>